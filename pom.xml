                    <executions>
                        <execution>
                            <id>send-email</id>
                            <goals>
                                <goal>announcement-mail</goal>
                            </goals>
                            <phase>deploy</phase>
                            <configuration>
                                <smtpHost>${smtp.host}</smtpHost>
                                <toAddresses>
                                    <address>${announcement.list}</address>
                                </toAddresses>
                                <fromDeveloperId>marcelo_riss</fromDeveloperId>
                                <mailContentType>text/html</mailContentType>
                                <announcementFile>${announcement.file.name}</announcementFile>
                            </configuration>
                        </execution>
                    </executions>
                    <configuration>
                        <issueManagementSystems>
                            <issueManagementSystem>Trac</issueManagementSystem>
                        </issueManagementSystems>
                        <runOnlyAtExecutionRoot>true</runOnlyAtExecutionRoot>
                        <issueTypes>
                            <fix>defect</fix>
                            <add>enhancement</add>
                            <update>task</update>
                        </issueTypes>
                        <template>${announcement.file.name}</template>
                        <templateDirectory>${announcement.template.directory}</templateDirectory>
                        <announceParameters>
                            <images.server>${announcement.images.server}</images.server>
                            <all.downloads.link>${all.downloads.link}</all.downloads.link>
                            <is.parent.pom>${is.parent.pom}</is.parent.pom>
                            <releases.history.link></releases.history.link>
                            <tickets.main.url></tickets.main.url>
                            <issue.url.suffix>ticket/</issue.url.suffix>
                        </announceParameters>
                        <templateEncoding>utf-8</templateEncoding>
                        <introduction>${announcement.introduction}</introduction>
                    </configuration>
